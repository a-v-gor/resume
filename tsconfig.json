{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowJs": true,
    "alwaysStrict": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es5"
  },
  "include": [
    "src/**/*",
    "custom.d.ts"
  ]
}
